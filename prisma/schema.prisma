generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  uid       String   @unique
  nickname  String   @unique
  password  String // 存储加密后的密码
  role      Int      @default(1)
  enable    Boolean  @default(true)
  createdAt DateTime @default(now())
}
